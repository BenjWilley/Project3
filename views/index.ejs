<!DOCTYPE html>
<html lang="en">
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<title>Customer Home</title>
<link rel="icon" type="image/x-icon" href="https://cdn-icons-png.flaticon.com/512/5977/5977591.png" alt="Starbucks Logo">
<style>

  body {
    background-color: #f9f9f9;
    font: "Lucida Grande", Helvetica, Arial, sans-serif;
  }

  a {
    color: #151515;
  }


  .btn {
    background-color: #5C4033;

  }

  .btnbg {
    background-color: #ffcccb;
  }

  .btns{
    background-color: #006241;
  }

  .navbar {
    background-color: #006241;
  }

  .sticky {
    position: sticky;
    top: 0;
    z-index: 100;
  }

  img.icon {
    border-radius: 50%;
    width: 75px;
    height: 75px;
  }

  .menuNav {
    color: black;

    font-size: 1.5em;
    margin-top: 1em;
    margin-bottom: 1em;


    font-weight: 500;
  }

  .menuNavItem {
    margin-left: 1em;

  }

  a.page,
  a.page:hover,
  a.page:visited {
    color: black;
    text-decoration: none;

  }

  a.currentPage,
  a.currentPage:hover,
  a.currentPage:visited {
    color: black;
    text-decoration: underline;
    text-decoration-color: #006241;
    text-decoration-thickness: 3px;

  }

  .row {
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
    /* padding-top: 10px;
      padding-bottom: 10px;
      padding-left: 10px; */

    margin-top: 10px;
    margin-bottom: 10px;
    margin-left: 10px;
    margin-right: 10px;
  }

  .my-custom-scrollbar {
    position: relative;
    height: 400px;
    overflow: auto;
  }

  .table-wrapper-scroll-y {
    display: block;
  }

  /*
radio button styling
*/
  /*
Removes the "radio button circle"
*/
  .center {
    margin: auto;
    width: 50%;
    display: inline-block;
    vertical-align: middle;
  }

  .col {
    background-color: #d3b683;
  }

  .col-6 {
    background-color: #006241;
  }

  label {
    height: 100%;
    display: inline-block;
    background: white;
    border: 2px solid #006241;
    border-radius: 20px;
    padding: 1rem;
    margin-bottom: 1rem;
    text-align: center;
    width: 80%;

  }

  input[type="radio"]:checked+label {
    background: #006241;
    color: hsla(215, 0%, 100%, 1);
    box-shadow: 0px 0px 20px #006241;
  }

  input[type="checkbox"]:checked+label {
    background: #006241;
    color: hsla(215, 0%, 100%, 1);
    box-shadow: 0px 0px 20px #006241;
  }

</style>

</head>

<body>

  <!--Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark sticky">
    <a class="navbar-brand" title="link to homepage" href="/">
      <img src="https://cdn-icons-png.flaticon.com/512/5977/5977591.png" height=50px alt="Your logo" />
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse-4 navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item ">
          <a class="nav-link text-light" title="home button link" href="/">Home</a>
        </li>
        <li class="nav-item ">
          <a class="nav-link text-light" title="Link to menu" href="/Customer/CoffeeMenu/none">Menu</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-light" title="link to google maps" href="/finder">Locations</a>
        </li>
      </ul>
    </div>

    <!--sign in features-->
    <div class="dropdown">
      
      <button class="btn btns btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <img class="rounded-circle"src="https://dq5pwpg1q8ru0.cloudfront.net/2023/03/30/11/54/02/f81c2504-1084-467a-8f5a-858db63ce6b3/blank-profile-circle.png" alt="profile picture" height="auto" width="15%"/>
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" title="customer sign in" href="/login">Sign in</a>
        <a class="dropdown-item" title="customer sign out" href="/logout">Sign out</a>
      </div>
    </div>
  </nav>

  <div class="container-lg">
    <div class="row rounded">
      <div class="col">
        <img
          src="https://weproudlyservestarbucks.com/gb/sites/default/files/styles/profiler_question_small/public/2021-08/Profiler-WPSS-Cup-illustration.png?itok=93w60noC"
          width="80%" alt="starbucks coffee picture" />
      </div>
      <div class="col d-flex align-items-center justify-content-center">
        <div class="text-center">
          <h1 style="font-size: 40px;">Welcome to Starbucks!</h1>
          <p style="font-size: 25px;">Take a look at out vide variety of options!</p>
          <p style="font-size: 25px;">From our coffee to our breakfast, or even our bakery!</p>
          <button class="btn align-middle text-light" type="submit" aria-haspopup="true" aria-expanded="false">
            <a class="nav-link text-light" title="Link to order menu" href="/Customer/CoffeeMenu/none">Order now!</a>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="container-lg">
    <div class="row rounded">
      <div class="col-6 d-flex align-items-center justify-content-center">
        <div class="text-center text-light">
          <h2 style="font-size: 40px; ">Try our seasonal menu!</h2>
          <p style="font-size: 25px;">Seasonal menu items that change every season!</p>
          <p style="font-size: 25px;">Limited time only!</p>
          <button class="btn align-middle text-light btnbg" type="submit" aria-haspopup="true" aria-expanded="false">
            <a class="nav-link text-dark" title="link to seasonal menu" href="/Customer/SeasonalMenu">Seasonal Menu</a>
          </button>
        </div>
      </div>
      <div class="col-6">
        <img
          src="https://media.glamour.com/photos/63628dba780dd126aac5f18e/16:9/w_1280,c_limit/Starbucks%20Holiday%20Drinks%203.jpg"
          width="100%" alt="4 starbucks seasonal drinks" />
      </div>
    </div>
  </div>
  <!-- <p><%=price%></p> -->


  <script type="application/javascript">
    document.addEventListener("DOMContentLoaded", function () {
      const selectEl = document.getElementById("colorblind-select");
      selectEl.addEventListener("change", function () {
        const filter = this.value;
        document.documentElement.className = filter;
      });
    });
  </script>

  <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
    <label>
      <select id="colorblind-select" title="type of colorblindness selection">
        <option value="normal">Normal</option>
        <option value="protanopia">Protanopia</option>
        <option value="deuteranopia">Deuteranopia</option>
        <option value="tritanopia">Tritanopia</option>
        <option value="greyscale">Greyscale</option>
      </select>
    </label>
  </div>

  <%- include('translate-script') %>


    <!-- footer -->
    <footer class="text-center text-lg-start bg-white text-muted">

      <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
