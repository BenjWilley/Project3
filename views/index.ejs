          <span>Don't understand English? Translate the page!</span>
        </div>
        <div id="google_translate_element"></div>
      </section>

      <section class="">
        <div class="container text-center text-md-start mt-5">
          <div class="row mt-2">

            <!--col1-->
            <div class="col-md-2 col-lg-3 col-xl-3 mx-auto mb-4">
              <h5>
                <i class="fas fa-gem me-3 text-secondary text-uppercase fw-bold mb-4"></i>CSCE 331
              </h5>
              <p>Team RHO</p>
              <p>Ben, Ashwin, Emil</p>
            </div>

            <!--col2-->
            

            <!--col3-->
            <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
              <h6 class="text-uppercase fw-bold mb-4">
                Our inspiration
              </h6>
              <p>
                <a href="https://www.starbucks.com/" title="link to starbucks officail website" class="text-reset">Starbucks</a>
              </p>
            </div>
        </div>

      </section>
      <div class="text-center text-dark p-4" style="background-color: rgba(0, 0, 0, 0.025);">
        Â© 2023 Copyright:
        <a class="text-dark fw-bold">Team RHO</a>
      </div>
    </footer>
</body>
