img.protanopia  {
  /* Change red images to shades of green */
  filter: 
    /* Remove red */
    grayscale(.6) 
    /* Enhance green */
    sepia(.1) 
    brightness(1.2) 
    contrast(1.2) 
    saturate(1.4) 
    hue-rotate(90deg);
}

img.deuteranopia  {
