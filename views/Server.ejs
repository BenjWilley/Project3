/*
radio button styling
*/
/*
Removes the "radio button circle"
*/
  input[type="radio"] {
  display: none;
  &:not(:disabled) ~ label {
    cursor: pointer;
  }
}
input[type="checkbox"] {
  display: none;
  &:not(:disabled) ~ label {
    cursor: pointer;
  }
}
label {
  height: 100%;
  background: white;
  border: 2px solid #006241;
  border-radius: 20px;
  padding: 1rem;
  margin-bottom: 1rem;
  text-align: center;
  position: relative;
}

input[type="radio"]:checked + label {
  background: #006241;
  color: hsla(215, 0%, 100%, 1);
  box-shadow: 0px 0px 20px #006241;
}
input[type="checkbox"]:checked + label {
  background: #006241;
  color: hsla(215, 0%, 100%, 1);
  box-shadow: 0px 0px 20px #006241;
}
  </style>

