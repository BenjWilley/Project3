<!--Inventory -->
<div class="container-md">
  <div class="row">
    <!-- column 1-->
    <div class="col">
      <h3>Cart</h3>
      <div class="table-wrapper-scroll-y my-custom-scrollbar">
      <table class="table table-sm" cellspacing="0">
        <thead>
          <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>

          <% for(var i in currentOrder) { %>
              <tr>
                <td><%= currentOrder[i].size%> <%= currentOrder[i].name%></td>
                <td><%= currentOrder[i].price%></td>
                <td>
                   <form action="/"method="post" >

                    <button class="btn btn-success" type="submit" aria-haspopup="true" aria-expanded="false">
                      delete
                    </button>
               </form>
           </td>
              </tr>
           <% } %>
          </tbody>
      </table>
      </div>
    </div>
    <!-- column 2-->
    <div class="col">
        <td class = "Radio">
          <h3>Order</h3>
      <form action="/orderItem" method="post">
          
      <% for (var i = 0; i < serverMenu.length; i++) { %>
            <input class = "radioBtn" type = "radio" id="<%= serverMenu[i].item%>" value="<%= serverMenu[i].item%>:<%= serverMenu[i].category%>:<%= serverMenu[i].subcategory%>:<%= serverMenu[i].tall%>:<%= serverMenu[i].grande%>:<%= serverMenu[i].venti%>" name= "drinkOrder"></input>
            <label for="<%= serverMenu[i].item%>"><%= serverMenu[i].item%></label>
           
      <% } %>
      
      <% if(serverMenu[0].category !='Food'){ %>
         <br> 
         <h3>Size</h3>
      
      
      <input type = "radio" id="tall" name= "drinkSize" value="tall"></input>
      <label for="tall">Tall </label>
      
      <input type = "radio" id="grande"name= "drinkSize"  value="grande" checked></input>
      <label for="grande">Grande</label>
      
      <input type = "radio"  id="venti" name= "drinkSize" value="venti"></input>
      <label for="venti">Venti</label>
      <h3>Customizations</h3>
      <input type = "checkbox" id="shot" name= "shot" ></input>
      <label for="shot">Espresso Shot</label>
      <input type = "checkbox" id="iced" name= "iced" ></input>
      <label for="iced">Iced </label>
      <input type = "checkbox" id="syrup" name= "syrup" ></input>
      <label for="syrup">Syrup Pump </label>
      <input type = "checkbox" id="nondairy" name= "nondairy" ></input>
      <label for="nondairy">nondairy </label>
   
     <%} %>
       <br><br>   
       <button class="btn btn-success" type="submit" aria-haspopup="true" aria-expanded="false">Order</button> 

      
    </div>
  </div>
</div>



<!--Inventory -->
<div class="container-md">
  <div class="row">
    <div class="col">
  
  <h3><%= id%></h3>
  <table class="table">
    <thead>
      <tr>
        <th>Item</th>
        <% if(serverMenu[0].category =='Food'){ %>
          
          <th>Price</th>
     
       <%} else{ %>
        <th>Tall</th>
        <th>Grande</th>
        <th>Venti</th>
        
        <% } %>
      
      </tr>
    </thead>
    <tbody>
      
      <% for(var i in serverMenu) { %>
          <tr>
            <td><%= serverMenu[i].item%></td>
            <% if( serverMenu[0].category=='Food'){ %>
              <td>$<%= serverMenu[i].tall%></td>
           <% } else{ %>
            

            <td>$<%= serverMenu[i].tall%></td>
              <td>$<%= serverMenu[i].grande%></td>
              <td>$<%= serverMenu[i].venti%></td>
            <% } %>
            
          </tr>
       <% } %>
      
    </tbody>
  </table>
